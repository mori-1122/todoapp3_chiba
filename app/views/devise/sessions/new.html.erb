<h2>Sign in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, placeholder: "メールアドレスを入力してください" ,autocomplete: "email", class: "input-field" %>
  </div>

  <div>
    <%= f.label :password %><br />
    <%= f.password_field :password, placeholder:"パスワードを入力してください", autocomplete: "off", class: "input-field" %>
  </div>

  <div>
    <%= f.submit "Submit", class: "btn btn-submit" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
