<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "input-field",  placeholder: "メールアドレスを入力してください" ,autocomplete: "email" %>
  </div>

  <div>
    <%= f.label :password %><br />
    <%= f.password_field :password, placeholder:"パスワードを入力してください", autocomplete: "off", class: "input-field" %>
  </div>

  <div>
    <%= f.label :password_confirmation, "Password Confirmation" %><br />
    <%= f.password_field :password_confirmation, placeholder: "パスワードを再度入力してください", autocomplete: "off", class: "input-field" %>
  </div>

  <div>
    <%= f.submit "Submit", class: "btn btn-submit" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
