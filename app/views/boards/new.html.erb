<h1>New Board</h1>

<%= form_for @board do |f| %>
  <div>
    <%= f.label :title, "Name" %>
    <%= f.text_field :title, class: "input-field" %>
  </div>

  <div>
    <%= f.label :description, "Description" %>
    <%= f.text_area :description, class: "input-field" %>
  </div>

  <div>
    <%= f.submit "Submit", class: "btn btn-submit" %>
  </div>
<% end %>
