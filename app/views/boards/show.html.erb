<h1>Brackets</h1>

<div class="board-card">
    <h3><%= @board.title %></h3>

  <div class="board-content">
    <p><%= @board.description %></p>
  </div>

  <div class="board-footer">
      <%= image_tag "930f9e1e5c25e9e34066ff7fcd0e3f58.png", class: "board-user-icon" %>
  </div>
</div>
  <%# タスク一覧を出す %>
 <% @tasks.each do |task| %>
  <%= link_to board_task_path(@board, task), class: "task-link" do %>
    <div class="board-card mt-3">
      <% if task.eyecatch.attached? %>
        <%= image_tag task.eyecatch %>
      <% end %>

      <h3><%= task.title %></h3>
      <p><%= task.description %></p>
      <small>期限: <%= task.due_date.strftime("%Y-%m-%d") %></small>
    </div>
  <% end %>
<% end %>

<!-- + Add new card ボタン -->
<%= link_to "+ Add new card", new_board_task_path(@board), class: "add-board mt-3"  %>

<div class="btn-container">
<%= link_to "Back to Boards", boards_path, class: "btn btn-submit mt-2" %>
</div>