<h1>編集: <%= @board.title %></h1>

<div class="board-card ">
  <%= form_with(model: @board, local: true) do |f| %>
    <div class="form-group">
      <%= f.label :title, "タイトル" %>
      <%= f.text_field :title, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :description, "内容" %>
      <%= f.text_area :description, class: "form-control", rows: 5, required: true %>
    </div>

    
    <div class="d-flex">
        <%= f.submit "Edit", class: "btn btn-warning w-100" %>
        <%= link_to "Cansell", board_path(@board), class: "btn btn-secondary w-100 mx-2" %>
    </div>

  <% end %>
</div>